{
  "name": "splitsoftware/split-sdk-php",
  "description": "Split SDK for PHP",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Split",
      "homepage": "http://split.io"
    },
    {
      "name": "Sebastian Arrubia",
      "email": "sebastian@split.io"
    }
  ],

  "bin": ["bin/splitio.phar"],

  "require": {
    "php": ">=5.4.0",
    "splitsoftware/split-php-common": "^1.0"
  },

  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "phpdocumentor/phpdocumentor": "2.*",
    "squizlabs/php_codesniffer": "2.*",
    "fabpot/php-cs-fixer": "^1.11"
  },

  "suggest": {
    "ext-redis": "Allows communicate with Redis servers (php extension)",
    "predis/predis": "Allows communicate with Redis server and clusters (predis library)"
  },

  "autoload": {
    "psr-4": {
      "SplitIO\\": "src/SplitIO/"
    },
    "files": ["src/functions_include.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "SplitIO\\Test\\": "tests/"
    }
  }
}
